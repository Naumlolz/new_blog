<%= form_with url: comments_path(id: @post.id), method: :post do |f|%>
  <% if @errors.present? %>
    <div class="alert alert-danger" role="alert">
      <%= @errors %>
    </div>
  <% end %>

  <div class="form-group" style="max-width: 80%;">
    <label for="textMessage">Write comment</label>
    <%= f.text_field :body, class: 'form-control mt-2' %>
  </div>
  <div class="form-group">
    <%= f.hidden_field :post_id %>
  </div>
  <%= f.submit 'Send', class: 'btn btn-primary mt-3' %>
<% end %>